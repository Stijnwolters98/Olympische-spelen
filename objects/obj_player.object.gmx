            <string>//Get the player's input
key_right = keyboard_check(vk_right);
key_left = -keyboard_check(vk_left);
key_jump = keyboard_check_pressed(vk_space);
key_salto =  keyboard_check_pressed(vk_shift);

//React to inputs
move = key_left + key_right;
hsp = move * movespeed;
if (vsp &lt; 10) vsp += grav;
 
if (place_meeting(x,y+1,obj_trampoline))
{
    vsp = key_jump * -jumpspeed * 1.5;
}

if (place_meeting(x,y+1,obj_muur))
{
    vsp = key_jump * -jumpspeed;
}
 

//maken van de salto
if (key_salto = true) {

instance_destroy()
instance_create(x,y, obj_stickman_salto)


//global.score +=10;
}



//Horizontal Collision muur
if (place_meeting(x+hsp,y,obj_muur))
{
    while(!place_meeting(x+sign(hsp),y,obj_muur))
    {
        x += sign(hsp);
    }
    hsp = 0;
}
x += hsp;
 
//Vertical Collision muur
if (place_meeting(x,y+vsp,obj_muur))
{
    while(!place_meeting(x,y+sign(vsp),obj_muur))
    {
        y += sign(vsp);
    }
    vsp = 0;
}
y += vsp;

//Horizontal Collision trampoline
if (place_meeting(x+hsp,y,obj_trampoline))
{
    while(!place_meeting(x+sign(hsp),y,obj_trampoline))
    {
        x += sign(hsp);
    }
    hsp = 0;
}
