            <string>///Speler input script

//Bewegings input
rightKey = keyboard_check(vk_right);
leftKey = -keyboard_check(vk_left);
jumpKey = keyboard_check_pressed(vk_space);

//Trucjes input
//salto
truc_salto1 = keyboard_check(ord('Q'));
truc_salto2 = keyboard_check(ord('W'));
truc_salto3 = keyboard_check(ord('E'));
truc_salto4 = keyboard_check(ord('R'));
//backflip
truc_backflip1 = keyboard_check(ord('A'));
truc_backflip2 = keyboard_check(ord('S'));
truc_backflip3 = keyboard_check(ord('D'));
truc_backflip4 = keyboard_check(ord('F'));
//pirouette
truc_pirouette1 = keyboard_check(ord('Z'));
truc_pirouette2 = keyboard_check(ord('X'));
truc_pirouette3 = keyboard_check(ord('C'));
truc_pirouette4 = keyboard_check(ord('V'));


truc4Key = keyboard_check(ord('J'));

//State checks -----------------------------------------------------

//naar rechts en links lopen logica
if (rightKey == 1 and leftKey == 0) {
    if (grounded or grounded_trampoline){
    hsp = speedOnGround;
    } else if (grounded == false or grounded_trampoline == false) { //Als in de lucht
        hsp = speedInAir;
    }
}

if (leftKey == -1 and rightKey == 0) {
    if (grounded or grounded_trampoline){
    hsp = -speedOnGround; //Vector naar links gericht, dus negatief.
    } else if (grounded == false or grounded_trampoline == false) { //Als in de lucht
        hsp = -speedInAir;
    }
}

if (leftKey == 0 and rightKey == 0){
    if (grounded or grounded_trampoline){
        hsp = 0;
    }
}


//Verticale collision
if (place_meeting(x, y+vsp, obj_muur))
{
    while(!place_meeting(x, y+sign(vsp), obj_muur)) //Ookwel, wanneer je in de lucht bent:
    {
        y += sign(vsp);
    }
    vsp = 0;
}
y += vsp;

//Horizontale collision
if (place_meeting(x+hsp, y, obj_muur))
{
    while(!place_meeting(x+sign(hsp), y, obj_muur))
    {
        x += sign(hsp);
    }
    hsp = 0;
}
x += hsp;

//Veranderen van sprites.
if (hsp&gt;0) {sprite_index = spr_stickman_lopenR};
if (hsp&lt;0) {sprite_index = spr_stickman_lopenL};
if (hsp=0) {sprite_index = spr_stickman_staan};

//Als in de lucht:
if (place_meeting(x, y+1, obj_muur) == false){
    grounded = false;
} else {
    grounded = true;
}

//Als op de trampoline:
if (place_meeting(x, y+1, obj_trampoline) == false){
    grounded_trampoline = false;
} else {
    grounded_trampoline = true;
}

//Zwaartekracht
if (vsp &lt;10)
{
    vsp += grav;
} 

if (jumpKey) {
    if (grounded_trampoline) {
        vsp = jumpKey * -jumpspeed *1.5;
        audio_play_sound(snd_jump_trampoline_game, 1, false);
    } else if (grounded) {
        vsp = jumpKey * -jumpspeed;
        audio_play_sound(snd_jump_trampoline_game, 1, false);
    }
}




/*
Collision werkt ook met de trampoline zonder daarbij speciaal een code te schrijven.
Dit komt omdat obj_trampoline nu de 'child' is van obj_muur, waarbij hij dezelfde voorwaarden
als obj_muur deelt.
*/

//Uitvoeren van de verschillende trucs
//Uitvoeren van truc1 (salto)

if truc_salto1 {
    instance_destroy();
    instance_create(x,y, obj_stickman_salto);

}

//Uitvoeren van truc2 (backflip)
if truc_backflip1
{
    instance_destroy();
    instance_create(x,y, obj_stickman_backflip);
    
}

//Uitvoeren van truc3 (pirouette)
if truc_pirouette1
{
    instance_destroy();
    instance_create(x,y, obj_stickman_pirouette);
}


